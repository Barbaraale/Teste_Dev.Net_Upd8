@model ClienteModel
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar Cliente</h1>

<form asp-controller="Cliente" asp-action="Create" method="post">
    <div class="form-group">
        <div class="form-item">
            <label for="nome">Nome:</label>
            <input type="text" asp-for="Nome" class="form-control" id="nome" style="width: 300px">
        </div>

        <div class="form-item">
            <label for="cpf">CPF:</label>
            <input type="text" asp-for="CPF" class="form-control" id="cpf" placeholder="XXX.XXX.XXX-XX" style="width: 170px">
        </div>

        <div class="form-item">
            <label for="dataNasc">Data Nasc.:</label>
            <input type="date" asp-for="DataNascimento" class="form-control" id="dataNasc" style="width: 170px">
        </div>

        <div class="form-item" style=" justify-content: flex-end">
            <label>Sexo:</label>

            <label for="feminino" style="font-weight: normal">Feminino</label>
            <input type="radio" asp-for="Sexo" id="feminino" name="sexo" value="F" style="margin: 0 15px 6px 0">

            <label for="Masculino" style="font-weight: normal">Masculino</label>
            <input type="radio" asp-for="Sexo" id="masculino" name="sexo" value="M" style="margin-bottom: 6px">
        </div>
    </div>

    <div class="form-group">
        <div class="form-item">
            <label for="endereco">Endereço:</label>
            <input type="text" asp-for="Endereco" class="form-control" id="endereco" style="width: 400px">
        </div>

        <div class="form-item">
            <label for="cidade">Cidade:</label>
            <input type="text" asp-for="Cidade" class="form-control" id="cidade" style="width: 270px">
        </div>

        <div class="form-item">
            <label for="estado">Estado:</label>
            <input type="text" asp-for="Estado" class="form-control" id="estado" placeholder="UF">
        </div>
    </div>

    <div class="div-btn">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <button type="button" class="btn btn-limpar btn-secondary" onclick="clearAll()">Limpar</button>
    </div>
</form>